{
  "name": "habitchain-2-contracts",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "npx hardhat test",
    "compile": "npx hardhat compile",
    "bytecode": "node scripts/check-bytecode.js",
    "compile:check": "npx hardhat compile && node scripts/check-bytecode.js",
    "clean": "npx hardhat clean",
    "deploy:clean": "rm -rf ./ignition/deployments/",
    "generate:frontend": "cd ../frontend && npx wagmi generate",
    "deploy:habittracker": "echo 'y' |  npx hardhat ignition deploy ./ignition/modules/HabitTracker.ts --network polkadotHubTestnet",
    "deploy:settler": "echo 'y' |  npx hardhat ignition deploy ./ignition/modules/HabitSettler.ts --network polkadotHubTestnet",
    "deploy:mock": "echo 'y' |  npx hardhat ignition deploy ./ignition/modules/MockStakingRewards.ts --network polkadotHubTestnet",
    "deploy:moonwell": "echo 'y' |  npx hardhat ignition deploy ./ignition/modules/MoonwellAdapter.ts --network polkadotHubTestnet",
    "deploy:all": "ts-node scripts/deploy-all.ts --network polkadotHubTestnet",
    "redeploy:all": "ts-node scripts/deploy-all.ts --network polkadotHubTestnet --clean",
    "deploy:testnet": "ts-node scripts/deploy-all.ts --network polkadotHubTestnet",
    "redeploy:testnet": "ts-node scripts/deploy-all.ts --network polkadotHubTestnet --clean",
    "deploy:moonbeam": "ts-node scripts/deploy-all.ts --network moonbeam",
    "redeploy:moonbeam": "ts-node scripts/deploy-all.ts --network moonbeam --clean",
    "deploy:localhost": "ts-node scripts/deploy-all.ts --network localhost",
    "redeploy:localhost": "ts-node scripts/deploy-all.ts --network localhost --clean"
  },
  "note": "Override deploy network like `npm run deploy:habittracker -- --network moonbeam`.",
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "@nomicfoundation/hardhat-ignition": "^0.15.12",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@nomicfoundation/hardhat-viem": "^2.0.6",
    "@parity/hardhat-polkadot": "^0.1.8",
    "@types/chai-as-promised": "^7.1.8",
    "@types/node": "^20.19.19",
    "chai": "^4.5.0",
    "hardhat": "2.26.2",
    "solc": "0.8.28",
    "ts-node": "^10.9.2",
    "typescript": "~5.0.4",
    "viem": "^2.31.7"
  },
  "dependencies": {
    "dotenv": "^17.2.2"
  }
}
